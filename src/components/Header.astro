---
import Logo from "./Logo.astro";
import LangSwitch from "./LangSwitch.astro";
import Menu from "./Menu.astro";
---

<header>
  <Logo />
  <div class="langswitch-menu-container">
    <LangSwitch />
    <Menu />
  </div>
</header>

<style>
  header {
    height: 60px;
    display: grid;
    padding: 0 16px;
    grid-template-columns: auto 1fr;
    justify-content: space-between;
    align-items: center;
  }

  .langswitch-menu-container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
</style>
