---
import "@fontsource-variable/jura";
import "@fontsource-variable/playfair-display";
import Hero from "./Hero.astro";

import { i18n } from "../i18n/i18n";
import { decodeHtmlEntities } from "../utils/i18n.mjs";
---

<div id="intro">
  <Hero />
  <h1>João Trindade</h1>
  <p class="expertise">| {i18n._("Python & JavaScript Development")}</p>
  <p class="expertise">
    | {i18n._("Localization Engineering & Management")}
  </p>
  <p class="expertise">| {i18n._("DevOps, LangOps & LLMOps")}</p>
  <section id="presentation">
    <p>
      {
        decodeHtmlEntities(
          i18n._(
            "I’m a software developer with over 5 years of experience in Python and JavaScript, and 13 years as a localization engineer and{nonBrSpace}manager.",
            { nonBrSpace: "&nbsp;" }
          )
        )
      }
    </p>
  </section>
</div>

<style>
  #intro {
    padding: 90px 28px 80px;
    text-align: center;
  }

  h1 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    font-family: "Jura Variable", sans-serif;
    font-weight: 700;
    font-size: 1.5rem;
  }

  .expertise {
    font-family: "Jura Variable", sans-serif;
    font-size: 0.875rem;
    color: #36454f;
  }

  #presentation {
    margin-top: 2rem;
  }

  #presentation p {
    font-family: "Playfair Display Variable", serif;
    font-size: 1.75rem;
  }
</style>
