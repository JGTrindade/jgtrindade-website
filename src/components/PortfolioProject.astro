---
import { Picture } from "astro:assets";
const { image, altText, name } = Astro.props;
---

<article>
  <a href="#">
    <div class="img-wrapper">
      <Picture
        class="project"
        src={image}
        loading="lazy"
        alt={altText}
        quality={"max"}
        widths={[240, 540, 720, image.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${image.width}px`}
      />
    </div>
  </a>
  <a href="#">{name}</a>
  <a>Check out Project</a>
  <a>Source Code</a>
</article>

<style>
  article {
    padding: 0 15px;
  }

  .img-wrapper {
    width: 80%;
    margin: 0 auto;
  }

  .project {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }
</style>
