---
import {Image} from "astro:assets";
import type {CollectionEntry} from 'astro:content';
interface Props {
    post: CollectionEntry<'posts'>;
}
const {post} = Astro.props;
const date = post.data.pubDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})
---
<article>
    <header>
        <div class="post-category">
            <a href="#">{post.data.categories[0]}</a>
        </div>
        <h2><a href="#" title="">{post.data.title}</a></h2>
        <div class="post-meta">
            <p class="post-excerpt">{post.data.excerpt}</p>
            <div class="post-author-date">
                <a title="" rel="" class="post-author-avatar-name">
                    <span class="post-author-avatar">
                        <Image id="hero-image"
                               src={post.data.authorAvatar.src}
                               loading="eager"
                               alt="Photo of JoÃ£o Trindade"
                               width={30}
                               height={30}
                               quality={"max"}
                               densities={[1.5, 2]}
                        />
                    </span>
                    <span class="post-author-link" rel="author">By {post.data.author}</span>
                </a>
                <span>
                    on <time datetime="2024-02-25" class="post-date">{date}</time>
                </span>
            </div>
        </div>
    </header>
</article>

<style>
    article {
        text-align: center;
        padding: 32px 0;
        border-bottom: 1px solid #ECECEC;
    }

    article a {
        text-decoration: none;
    }

    header {
        padding: 0 15px;
    }

    .post-category a {
        text-transform: uppercase;
        font-family: "Jura Variable", sans-serif;
        color: #36454f;
    }

    .post-meta {
        font-family: "Playfair Display Variable", serif;
    }

    h2 {
        margin: 0 0 20px;
    }

    h2 a {
        font-size: 2rem;
        color: #000;
    }

    .post-excerpt {
        margin-bottom: 20px;
    }

    .post-author-date {
        font-size: 0.9rem;
        font-family: "Jura Variable", sans-serif;
    }

    .post-author-avatar-name {
        display: inline-block;
        text-align: start;
    }

    .post-author-avatar {
        float: left;
        display: block;
        margin: -2px 8px 0 0;
    }

    #hero-image {
        border-radius: 30px;
    }
</style>